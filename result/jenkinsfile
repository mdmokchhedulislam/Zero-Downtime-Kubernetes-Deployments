pipeline {
    agent any
    
    tools {
        nodejs 'nodejs23'
    }

    environment {
        SCANNER_HOME = tool 'sonar-scanner'
    }

    stages {

        stage('Git Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/mdmokchhedulislam/Zero-Downtime-Kubernetes-Deployments.git'
            }
        }

        stage('Result Service Compilation') {
            steps {
                dir('result') {
                    sh 'find . -name "*.js" -exec node --check {} +'
                }
            }
        }

        stage('GitLeaks Scan') {
            steps {
                dir('result') {
                    sh 'gitleaks detect --source . --exit-code 1'
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                dir('result') {
                    withSonarQubeEnv('sonar') {
                        sh '''
                            $SCANNER_HOME/bin/sonar-scanner \
                            -Dsonar.projectName=result_service-project \
                            -Dsonar.projectKey=result_service-project
                        '''
                    }
                }
            }
        }

        stage('Quality Gate Check') {
            steps {
                timeout(time: 1, unit: 'HOURS') {
                    waitForQualityGate abortPipeline: false, credentialsId: 'sonar-token'
                }
            }
        }

        stage('Trivy FS Scan') {
            steps {
                dir('result') {
                    sh 'trivy fs --format table -o fs-report.html .'
                }
            }
        }

        stage('Build, Tag & Push result service to DockerHub') {
            steps {
                script {
                    withDockerRegistry(credentialsId: 'result_service') {
                        dir('result') {
                            sh '''
                                docker build -t mokchhedul/result_service:latest .
                                trivy image --format table -o result_service-image-report.html mokchhedul/result_service:latest
                                docker push mokchhedul/result_service:latest
                            '''
                        }
                    }
                }
            }
        }
    }
}
