pipeline {
    agent any

    environment {
        SCANNER_HOME = tool 'sonar-scanner'
    }

    stages {

        // --------------------- GIT CHECKOUT ---------------------
        stage('Git Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/mdmokchhedulislam/Zero-Downtime-Kubernetes-Deployments.git'
            }
        }

        // --------------------- SECRET SCAN ---------------------
        stage('GitLeaks Scan') {
            steps {
                dir('worker') {
                    sh 'gitleaks detect --source . --exit-code 1'
                }
            }
        }

        // --------------------- SONARQUBE ANALYSIS ---------------------
        stage('SonarQube Analysis') {
            steps {
                dir('worker') {
                    withSonarQubeEnv('sonar') {
                        sh '''
                            $SCANNER_HOME/bin/sonar-scanner \
                            -Dsonar.projectName=worker_service-project \
                            -Dsonar.projectKey=worker_service-project
                        '''
                    }
                }
            }
        }

        // --------------------- SECURITY SCAN ---------------------
        stage('Trivy FS Scan') {
            steps {
                dir('worker') {
                    sh 'trivy fs --format table -o fs-report.html .'
                }
            }
        }

        // --------------------- DOTNET BUILD ---------------------
        stage('Build .NET Worker Service') {
            steps {
                dir('worker') {
                    sh 'dotnet restore'
                    sh 'dotnet build --configuration Release'
                    sh 'dotnet publish -c Release -o out'
                }
            }
        }

        // --------------------- BUILD & PUSH DOCKER IMAGE ---------------------
        stage('Build, Tag & Push Worker Service') {
            steps {
                script {
                    withDockerRegistry(credentialsId: 'docker-cred') {
                        dir('worker') {
                            sh '''
                                docker build -t mokchhedul/worker_service:latest .
                                trivy image --format table -o worker_service-image-report.html mokchhedul/worker_service:latest
                                docker push mokchhedul/worker_service:latest
                            '''
                        }
                    }
                }
            }
        }
    }
}
